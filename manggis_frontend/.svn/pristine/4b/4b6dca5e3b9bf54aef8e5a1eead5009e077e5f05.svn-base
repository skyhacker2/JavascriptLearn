<!-- include "../../../css/mod/campaign/preview.css" -->
<!--[if lt IE 9]>
	<style>
		#preview-iframe{
			margin-left:-12px;
		}
	</style>
<![endif]-->
<div class="modal-backdrop fade"></div>
<div id="preview-container">
	<div style="margin:20px auto;width:900px;overflow:hidden;" id="preview-width">
		<div id="preview-header" class="off-screen off-top">
			<li>
				<strong>From: </strong><%=fromName%> &lt;<%=fromEmail%>&gt;
			</li>
			<li>
				<strong>To: </strong><span id="editToItem"><%=firstName%> <%=lastName%> &lt;<%=toEmail%>&gt;</span> 
				<div id="edit-groups-container" style="display:none;"><input id="edit-groups" class="form-control" name="editGroups" maxlength="80" type="text" value="" style="width: 300px; margin-bottom: 0px; display: inline-block;" /></div> 
				<a href="javascript:void(0)" onclick="return;" data-rfl-click="editTo" id="edit-to"><i class="icon-pencil"></i></a>
			</li>
			<li>
				<strong>Subject: </strong><span id="editSubject"><%=subject%></span>
			</li>
		</div>

		<div id="desktop-view">
			<iframe src="about:blank" id="preview-iframe" class="off-screen off-top"></iframe>
		</div>
		<%if(support){%>
		<div id="mobile-view" class="display-none">
			<iframe src="about:blank" id="mobile-iframe"></iframe>
		</div>
		<%}%>
	</div>
<div>
<div id="preview-tool" class="off-screen off-left">
	<%if(support){%>
	<button class="btn" type="button" style="margin: 5px;" id="mobile-button" data-rfl-click="changeDevice mobile"><i class="icon-mobile-phone"></i> Show Mobile</button>
	<div style="margin: 5px; display:none;" id="desktop-button">
		<button class="btn" type="button" data-rfl-click="changeDevice desktop"><i class="icon-desktop"></i> Show Desktop</button> 
		<a href="javascript:void(0)" style="margin-left:5px;" onclick="return;" data-rfl-click="rotate">Rotate</a>
	</div>
	<%}%>
	<div class="pull-right" style="padding:10px; background:#a6a6a6;" data-rfl-click="close">
		<a href="javascript:void(0)" onclick="return;" id="preview-close" data-rfl-click="close">
			<i class="icon-remove" style="font-size:25px; z-index: 1500; margin:"></i>
		</a>
	</div>
</div>
