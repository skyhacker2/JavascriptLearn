<div class="match-notice clearfix">
	<%
		var recommandedCount = 0, matchedCount = 0, followUpCount = 0, skippedCount = 0;
		var allChecked = true;
		for(var i = 0, l = columns.length; i < l; i++) {
			var column = columns[i];
			if(column.skipped) {
				skippedCount++;
			} else {
				if(column.matched) {
					if(column.header == column.matched.name || column.matched.userSelection) {
						matchedCount++;
					} else {
						recommandedCount++;
					}
				} else {
					followUpCount++;
				}
			}
		}
	%>
	<div class="pull-left">
		<label>View Columns : </label>
		
		<%if(followUpCount) {%>
			<%allChecked = showType['follow-up'] ? allChecked : false;%>
			<label data-follow-up-count="<%=followUpCount%>" class="mockup-checkbox-label follow-up"><label class="mockup-checkbox <%=showType['follow-up'] ? 'on' : ''%>"><input type="checkbox" data-rfl-click="switchShowType follow-up" <%=showType['follow-up'] ? 'checked' : ''%> /><span><i class="icon-ok"></i></span></label><span>Unmatched</span> <span class="badge"><%=followUpCount%></span></label>
		<%}%>
		
		<%if(recommandedCount) {%>
			<%allChecked = showType['recommanded'] ? allChecked : false;%>
			<label data-recommanded-count="<%=recommandedCount%>" class="mockup-checkbox-label recommanded"><label class="mockup-checkbox <%=showType['recommanded'] ? 'on' : ''%>"><input type="checkbox" data-rfl-click="switchShowType recommanded" <%=showType['recommanded'] ? 'checked' : ''%> /><span><i class="icon-ok"></i></span></label><span>Recommanded</span> <span class="badge"><%=recommandedCount%></span></label>
		<%}%>

		<%if(matchedCount) {%>
			<%allChecked = showType['matched'] ? allChecked : false;%>
			<label data-matched-count="<%=matchedCount%>" class="mockup-checkbox-label matched"><label class="mockup-checkbox <%=showType['matched'] ? 'on' : ''%>"><input type="checkbox" data-rfl-click="switchShowType matched" <%=showType['matched'] ? 'checked' : ''%> /><span><i class="icon-ok"></i></span></label><span>Matched</span> <span class="badge"><%=matchedCount%></span></label>
		<%}%>

		<%if(skippedCount) {%>
			<%allChecked = showType['skipped'] ? allChecked : false;%>
			<label data-skipped-count="<%=skippedCount%>" class="mockup-checkbox-label skipped"><label class="mockup-checkbox <%=showType['skipped'] ? 'on' : ''%>"><input type="checkbox" data-rfl-click="switchShowType skipped" <%=showType['skipped'] ? 'checked' : ''%> /><span><i class="icon-ok"></i></span></label><span>Skipped</span> <span class="badge"><%=skippedCount%></span></label>
		<%}%>

		<label class="mockup-checkbox-label"><label class="mockup-checkbox <%=allChecked ? 'on' : ''%>"><input type="checkbox" data-rfl-click="switchShowType" <%=allChecked ? 'checked' : ''%> /><span><i class="icon-ok"></i></span></label><span>All</span> <span class="badge"><%=columns.length%></span></label>
	</div>
	<%if(followUpCount) {%>
		<a class="pull-right" href="javascript:void(0);" data-rfl-click="skipAll">Skip all unmatched</a>
	<%}%>
</div>