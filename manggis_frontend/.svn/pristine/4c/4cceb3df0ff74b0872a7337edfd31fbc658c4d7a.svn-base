<h1><%=lang.customer.label.manageProperties%></h1>
<div class="row section">
	<div class="col-md-12 text-right">
		<%if(auth.hasPerm('PERM_USER_ADMIN')) {%>
			<a id="btn-create" href="javascript:void(0);" onclick="return false;" data-rfl-click="createProperty" class="btn btn-primary responsive"><%=lang.common.label.create%></a> 
		<%}%>
	</div>
</div>
<table class="table table-striped table-bordered table-responsive <%=G.IS_PC ? 'table-hover' : ''%>">
	<thead>
		<tr>
			<th><%=lang.common.label.name%></th>
			<th width="200"><%=lang.customer.label.mergeTag%></th>
			<th width="120"><%=lang.customer.label.dataType%></th>
			<th width="80"><%=lang.common.label.operation%></th>
		</tr>
	</thead>
	<tbody>
	<%for(var i = 0; i < propertys.length; i++) {
		var item = propertys[i];%>
		<tr>
			<td data-th="<%=lang.common.label.name%> : "><%==item.name%></td>
			<td data-th="<%=lang.customer.label.mergeTag%> : ">${<%=item.tag%>}</td>
			<td data-th="<%=lang.customer.label.dataType%> : "><%=lang.propertyTypes.names[item.propertyType]%></td>
			<td>
				<div class="text-center">
					<%if(auth.hasPerm('PERM_USER_ADMIN')) {%>
						<a href="html/customer/property-edit-<%=G.LANG%>.html#listId=<%=listId%>&id=<%=item.id%>" title="<%=lang.common.label.edit%>" data-toggle="tooltip">&nbsp;<i class="icon-pencil"></i>&nbsp;</a>
						<%if(!item.basic) {%>
							&nbsp;
							<a href="javascript:void(0);" onclick="return false;" data-rfl-click="delRow <%=i%>" title="<%=lang.common.label.del%>" data-toggle="tooltip">&nbsp;<i class="icon-trash"></i>&nbsp;</a> 
						<%}%>
					<%}%>
				</div>
			</td>
		</tr>
	<%}%>
	<%if(!propertys.length) {%>
		<tr><td colspan="7"><div class="text-center"><%=lang.common.msg.noResult%></div></td></tr>
	<%}%>
	</tbody>
</table>
