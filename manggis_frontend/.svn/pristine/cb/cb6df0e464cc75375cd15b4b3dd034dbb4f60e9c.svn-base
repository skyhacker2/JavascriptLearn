<h1><%=lang.campaign.label.manageCampaigns%></h1>

<div class="row section">
	<div class="col-md-6 col-sm-6">
		<div class="btn-group responsive">
			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><i class="icon-filter"></i> Filter <span class="caret"></span></button>
			<div id="campaign-filter-form" class="dropdown-menu dropdown-form">
				<div class="dropdown-form-content row">
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label for="creation-data-from">Creation Date From</label>
							<div class="input-group" data-date="" data-date-format="<%=dateFormat.toLowerCase()%>">
								<input id="creation-data-from" class="form-control" name="creationDateFrom" type="text" value="" data-validator="<%=dateFormat%>@datetime" data-date-format="<%=dateFormat.toLowerCase()%>" data-rfl-keyup="keyupFilterCampaigns" /> 
								<span class="input-group-btn add-on">
									<button class="btn btn-default" type="button"><i class="icon-calendar"></i></button>
								</span>
							</div>
							<span class="help-block help-error"></span>
						</div>
						<div class="form-group">
							<label for="creation-data-to">Creation Date To</label>
							<div class="input-group" data-date="" data-date-format="<%=dateFormat.toLowerCase()%>">
								<input id="creation-data-to" class="form-control" name="creationDateTo" type="text" value="" data-validator="<%=dateFormat%>@datetime" data-date-format="<%=dateFormat.toLowerCase()%>" data-rfl-keyup="keyupFilterCampaigns" /> 
								<span class="input-group-btn add-on">
									<button class="btn btn-default" type="button"><i class="icon-calendar"></i></button>
								</span>
							</div>
							<span class="help-block help-error"></span>
						</div>
					</div>
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label for="filter-campaign-status">Campaign Status</label>
							<div>
								<input id="filter-campaign-status" class="form-control" name="filterCampaignStatus" type="text" value="" data-rfl-keyup="keyupFilterCampaigns" /> 
							</div>
						</div>
						<div class="form-group">
							<label for="filter-campaign-name">Campaign Name</label>
							<input id="filter-campaign-name" class="form-control" name="filterCampaignName" type="text" value="" data-rfl-keyup="keyupFilterCampaigns" /> 
						</div>
					</div>
				</div>
				<div class="dropdown-form-footer">
					<button class="btn btn-primary" data-rfl-click="doFilterCampaigns">OK</button> 
					<button class="btn btn-default" data-toggle="dropdown">Cancel</button>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-sm-6 text-right">
		<div class="btn-group responsive">
			<a class="btn btn-primary btn-create-campaign" href="javascript:void(0);" data-rfl-click="createCampaign"><i class="icon-envelope-alt"></i> Create Campaign</a>
			<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
			<ul class="dropdown-menu pull-right">
				<li><a href="javascript:void(0);" data-rfl-click="createCampaign regular"><i class="icon-envelope-alt"></i> Create Regular Campaign</a></li>
				<li><a href="javascript:void(0);" data-rfl-click="createCampaign absplit"><i class="icon-star-half-full"></i> Create AB Split Campaign</a></li>
			</ul>
		</div> 
	</div>
</div>
<div id="filter-criteria-div" class="section"></div>
<div id="campaign-list-div" class="section"></div>