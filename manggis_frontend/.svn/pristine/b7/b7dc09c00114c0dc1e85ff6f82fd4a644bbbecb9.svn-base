<div id="file-drop" class="row">
	<div class="col-md-6 col-sm-6">
		<div class="upload-wrapper">
			<div class="upload-area ">
				<div class="type-name csv">CSV</div>
				<div class="hint-box">
					<%if(dropFileSupported) {%>
						Drag and drop a file, <br />or click to select it from your computer.
					<%} else {%>
						Click to select it from your computer.
					<%}%>
					<div class="icon"><i class="icon-upload-alt"></i></div>
				</div>
				<div class="size-limit">Max size is <strong>50MB</strong></div>
				<div id="file-drop-area-csv" class="file-drop-area"></div>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-sm-6">
		<div class="upload-wrapper">
			<div class="upload-area ">
				<div class="type-name excel">Excel</div>
				<div class="hint-box">
					<%if(dropFileSupported) {%>
						Drag and drop a file, <br />or click to select it from your computer.
					<%} else {%>
						Click to select it from your computer.
					<%}%>
					<div class="icon"><i class="icon-upload-alt"></i></div>
				</div>
				<div class="size-limit">Max size is <strong>10MB</strong></div>
				<div id="file-drop-area-excel" class="file-drop-area"></div>
			</div>
		</div>
	</div>
</div>

<div id="progress-bar" class="upload-customer-progress-bar display-none">
	<div class="inner">
		<div class="progress-text">0%</div>
		<div class="progress progress-striped active">
			<div class="progress-bar" style="width: 0%;"></div>
		</div>
	</div>
</div>

