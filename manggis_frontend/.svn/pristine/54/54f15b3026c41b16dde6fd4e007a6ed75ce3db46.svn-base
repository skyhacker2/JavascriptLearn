<div class="row">
	<div class="col-md-6 col-sm-6">
		<div class="form-group">
			<label for="reply-to-email">Reply to Email %{{mandatory}}%</label>
			<input id="reply-to-email" class="form-control" name="replyToEmail" maxlength="180" data-validator="email" type="email" value="<%==data.replyToEmail || ''%>" data-rfl-keyup="step1KeyupSubmit" /> 
			<span class="help-block help-error"></span>
		</div>
	</div>
	<div class="col-md-6 col-sm-6">
		<div class="form-group">
			<label for="reply-to-name">Reply to Name %{{mandatory}}%</label>
			<input id="reply-to-name" class="form-control" name="replyToName" maxlength="80" data-validator="name" type="text" value="<%==data.replyToName || ''%>" data-rfl-keyup="step1KeyupSubmit" /> 
			<span class="help-block help-error"></span>
		</div>
	</div>
</div>