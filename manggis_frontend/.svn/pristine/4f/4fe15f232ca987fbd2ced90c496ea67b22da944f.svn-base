<%
var rfl = require('rfl');
var langResourceCommon = require('lang/{{G.LANG}}/common');
var langResourceGroup = require('lang/{{G.LANG}}/group');
%>

<h1><%=langResourceGroup.label.manageGroups%></h1>
<div class="row section">
	<div class="col-md-12 text-right">
		<%if(rfl.auth.hasPerm('PERM_USER_ADMIN')) {%>
			<a href="html/group/edit-<%=G.LANG%>.html" class="btn btn-primary responsive"><%=langResourceCommon.label.create%></a> 
		<%}%>
	</div>
</div>
<table class="table table-striped table-bordered table-responsive <%=G.IS_PC ? 'table-hover' : ''%>">
	<thead>
		<tr>
			<th><%=langResourceCommon.label.name%></th>
			<th width="50"><%=langResourceCommon.label.active%></th>
			<th width="80"><%=langResourceCommon.label.operation%></th>
		</tr>
	</thead>
	<tbody>
	<%for(var i = 0; i < groups.length; i++) {
		var item = groups[i];%>
		<tr data-id="<%=item.id%>">
			<td data-th="<%=langResourceCommon.label.name%> : "><%==item.name%></td>
			<td><div class="text-center"><%=item.enabled ? '<span class="icon-eye-open" title="' + langResourceCommon.label.active + '" data-toggle="tooltip"></span>' : '<span class="icon-eye-close opacity-50" title="' + langResourceCommon.label.inactive + '" data-toggle="tooltip"></span>'%></div></td>
			<td>
				<div class="text-center">
					<%if(!item.superGroup && rfl.auth.hasPerm('PERM_USER_ADMIN')) {%>
						<a href="html/group/edit-<%=G.LANG%>.html#!/<%=item.id%>" title="<%=langResourceCommon.label.edit%>" data-toggle="tooltip">&nbsp;<i class="icon-pencil"></i>&nbsp;</a>&nbsp;
						<a href="javascript:void(0);" onclick="return false;" title="<%=langResourceCommon.label.del%>" data-toggle="tooltip" data-del-btn>&nbsp;<i class="icon-trash"></i>&nbsp;</a>&nbsp;
						<a href="javascript:void(0);" onclick="return false;" title="<%=langResourceCommon.label.activate%> / <%=langResourceCommon.label.deactivate%>" data-toggle="tooltip" data-toggle-btn>&nbsp;<i class="icon-retweet"></i>&nbsp;</a>
					<%}%>
				</div>
			</td>
		</tr>
	<%}%>
	</tbody>
</table>
