<%
var langResourceCommon = require('lang/{{G.LANG}}/common');
var langResourceRole = require('lang/{{G.LANG}}/role');
%>

<h1><%=langResourceRole.label.manageRoles%></h1>
<div class="row section">
	<div class="col-md-12 text-right">
		<%if(auth.hasPerm('PERM_USER_ADMIN')) {%>
			<a href="html/role/edit-<%=G.LANG%>.html" class="btn btn-primary responsive"><%=langResourceCommon.label.create%></a> 
		<%}%>
	</div>
</div>
<table class="table table-striped table-bordered table-responsive <%=G.IS_PC ? 'table-hover' : ''%>">
	<thead>
		<tr>
			<th width="280"><%=langResourceCommon.label.name%></th>
			<th><%=langResourceCommon.label.desc%></th>
			<th width="80"><%=langResourceCommon.label.operation%></th>
		</tr>
	</thead>
	<tbody>
	<%for(var i = 0; i < data.length; i++) {
		var item = data[i];%>
		<tr>
			<td data-th="<%=langResourceCommon.label.name%> : "><%==item.name%></td>
			<td data-th="<%=langResourceCommon.label.desc%> : "><%==item.description%></td>
			<td>
				<div class="text-center">
					<%if(!item.superRole && auth.hasPerm('PERM_USER_ADMIN')) {%>
						<a href="html/role/edit-<%=G.LANG%>.html#id=<%=item.id%>" title="<%=langResourceCommon.label.edit%>">&nbsp;<i class="icon-pencil"></i>&nbsp;</a>&nbsp;
						<a href="javascript:void(0);" onclick="return false;" data-rfl-click="delRow <%=i%>" title="<%=langResourceCommon.label.del%>">&nbsp;<i class="icon-trash"></i>&nbsp;</a>
					<%}%>
				</div>
			</td>
		</tr>
	<%}%>
	</tbody>
</table>