<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>${{common.appName}}$ - ${{login.title}}$</title>
<!-- include "../inc/head.inc.html" -->
<script type="text/javascript">
document.write([
	'<link rel="stylesheet" href="' + G.CDN_ORIGIN + G.CDN_BASE + 'css/mod/login/main.css" />'
].join(''));
</script>
</script>
</head>
<body class="theme-background-lighter">
<!-- include "../inc/body-theme-style.inc.html" -->

<div class="login-container off">
	<div class="panel panel-theme">
		<div class="panel-heading">
			<h3 class="panel-title">&nbsp;</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-md-12">
					<div id="login-form">
						<div class="form-group">
							<label for="email">${{common.label.email}}$ %{{mandatory}}%</label>
							<input type="email" id="email" class="form-control" name="j_username" data-validator="mandatory email" data-rfl-keyup="keyupLogin" value="" />
							<span class="help-block help-error"></span>
						</div>
						<div class="form-group">
							<label for="pwd">${{login.label.pwd}}$ %{{mandatory}}%</label>
							<input type="password" id="pwd" class="form-control" name="j_password" data-validator="mandatory" data-rfl-keyup="keyupLogin" data-rfl-keypress="checkCapsLock" />
							<span class="help-block help-error"></span>
						</div>
						<div id="group-div"></div>
						<div class="form-group">
							<button data-rfl-click="login" type="submit" class="btn btn-primary">${{common.label.login}}$</button>&nbsp;&nbsp;&nbsp;&nbsp;
							<a href="javascript:void(0);" data-target="#" data-rfl-click="getPwdBack">${{login.label.forgotPwd}}$</a>&nbsp;&nbsp;
							<div class="btn-group link-group">
								<a class="link text-gray" href="javascript:void(0);" data-toggle="dropdown">${{common.lang.%{{_lang_}}%}}$<span class="caret"></span></a>
								<ul class="dropdown-menu pull-right">
									<li><a href="javascript:void(0);" onclick="return false;" data-rfl-click="changeLanguage en">English</a></li>
									<li><a href="javascript:void(0);" onclick="return false;" data-rfl-click="changeLanguage zh-cn">简体中文</a></li>
									<li><a href="javascript:void(0);" onclick="return false;" data-rfl-click="changeLanguage zh-tw">繁體中文</a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="alerts-container"></div>
</div>
<!-- include "../inc/body-footer.inc.html" -->

<!-- include "../../js/lib/yom/require/config.js" -->
<!-- include "../../js/lib/yom/require/require.js" -->
<!-- require "../../js/lib/yom/require-plugin/jsonp" -->
<!-- require "../../js/lang/%{{_lang_}}%/common" -->
<!-- require "../../js/lang/%{{_lang_}}%/login" -->
<!-- include "../../js/inc/footer.js" -->
<!-- require "../../js/mod/login/init" -->
<script type="text/javascript">
G.pageRequire(['../../js/mod/login/init'], function(main) {
	main.init();
});
</script>
</body>
</html>