<%
var langResourceCommon = require('lang/{{G.LANG}}/common');
var langResourceRole = require('lang/{{G.LANG}}/role');
%>

<h1><%=isEdit ? langResourceRole.label.editRole : langResourceRole.label.createRole%></h1>
<div id="edit-role-form">
	<div class="form-group">
		<label for="edit-role-name"><%=langResourceCommon.label.name%> %{{mandatory}}%</label>
		<input id="edit-role-name" class="form-control" name="name" maxlength="80" data-validator="mandatory name" type="text" value="<%==data.name || ''%>" data-rfl-keyup="keyupSubmit" />
		<span class="help-block help-error"></span>
	</div>
	<div class="form-group">
		<label for="edit-role-desc"><%=langResourceCommon.label.desc%></label>
		<textarea id="edit-role-desc" name="description" rows="3" class="form-control" data-validator="255@maxLength"><%==data.description || ''%></textarea>
		<span class="help-block help-error"></span>
	</div>
</div>
<h2 class="section"><%=langResourceRole.label.permissions%></h2>
<div class="row">
	<div class="col-md-6 col-sm-6">
		<h5 class="hidden"><%=langResourceRole.label.availablePermissions%></h5>
		<div>
			<button class="btn btn-link" data-rfl-click="addAllPerm"><%=langResourceCommon.label.selectAll%><i class="icon-share-alt"></i></button>
		</div>
		<div class="multiple-selection-box text-right">
			<ul id="available-permissions"></ul>
		</div>
	</div>
	<div class="col-md-6 col-sm-6">
		<h5 class="hidden"><%=langResourceRole.label.selectedPermissions%></h5>
		<div class="text-right">
			<button class="btn btn-link" data-rfl-click="removeAllPerm"><i class="icon-remove"></i><%=langResourceCommon.label.removeAll%></button>
		</div>
		<div class="multiple-selection-box">
			<ul id="selected-permissions"></ul>
		</div>
	</div>
</div>
<div class="section-divider"></div>
<div>
	<button class="btn btn-primary responsive" data-rfl-click="save"><%=isEdit ? langResourceCommon.label.update : langResourceCommon.label.save%></button> 
	<button class="btn btn-default responsive" data-rfl-click="cancel"><%=langResourceCommon.label.cancel%></button> 
</div>