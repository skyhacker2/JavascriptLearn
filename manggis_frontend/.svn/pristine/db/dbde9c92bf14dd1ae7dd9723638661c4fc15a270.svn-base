<%
var langResourceCustomer = require('lang/{{G.LANG}}/customer');
%>

<div class="clearfix">
	<h1 class="pull-left">
		<span data-type="list-name"><%==listName%></span> 
		<a href="javascript:void(0);" onclick="return false;" data-rfl-click="editListName"><i class="icon-pencil"></i></a> 
	</h1>
	<%if(totalCustomers) {%>
		<div class="btn-group btn-group-lg pull-right">
			<a href="html/customer/import-<%=G.LANG%>.html#!<%=listId%>" class="btn btn-default"><i class="icon-upload-alt"></i></a>
			<div class="btn-group btn-group-lg">
				<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><i class="icon-envelope-alt"></i> <span class="caret"></span></button>
				<ul class="dropdown-menu pull-right" role="menu">
					<li><a href="javascript:void(0);" onclick="return false;" data-rfl-click="createCampaign listId"><i class="icon-envelope-alt"></i> Create Regular Campaign</a></li>
					<li><a href="javascript:void(0);" onclick="return false;" data-rfl-click="createCampaign listId absplit"><i class="icon-star-half-full"></i> Create AB Split Campaign</a></li>
				</ul>
			</div>
			<div class="btn-group btn-group-lg">
				<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><i class="icon-list"></i> <span class="caret"></span></button>
				<ul class="dropdown-menu pull-right" role="menu">
					<li><a href="html/campaign/list-<%=G.LANG%>.html#!<%=listId%>"><i class="icon-list"></i> Manage Campaigns</a></li>
					<li><a href="html/customer/segment-list-<%=G.LANG%>.html#!<%=listId%>"><i class="icon-sitemap"></i> <%=langResourceCustomer.label.manageSegments%></a></li>
					<li><a href="html/customer/list-customer-list-<%=G.LANG%>.html#!<%=listId%>"><i class="icon-user"></i> <%=langResourceCustomer.label.manageCustomers%></a></li>
					<li><a href="html/customer/group-list-<%=G.LANG%>.html#!<%=listId%>"><i class="icon-group"></i> <%=langResourceCustomer.label.manageCustomerGroups%></a></li>
					<li><a href="html/customer/property-list-<%=G.LANG%>.html#!/<%=listId%>"><i class="icon-tags"></i> <%=langResourceCustomer.label.manageProperties%></a></li>
				</ul>
			</div>
		</div>
	<%}%>
</div>	
<div class="dashborad">
	<%if(!totalCustomers) {%>
		<!-- include "./list-first-guide.tpl.html" -->
	<%}%>
	<div class="dashboard-inner">
		<%if(!totalCustomers) {%>
			<div class="mask"></div>
		<%}%>
		<div class="row">
			<div class="col-md-6">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Customer Growth</h3>
						<div class="btn-group link-group">
							<button class="link text-gray" data-toggle="dropdown"><i class="icon-wrench"></i><span class="caret"></span></button>
							<ul class="dropdown-menu pull-right">
								<li><a href="javascript:void(0);" onclick="return false;" data-rfl-click="changeLanguage en"><i class="icon-trash"></i> Remove</a></li>
							</ul>
						</div>
					</div>
					<div id="customer-growth-chart" class="panel-body" style="height: 250px;">
						
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Campaign Growth</h3>
					</div>
					<div id="customer-growth-chart" class="panel-body" style="height: 250px;">
						
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Campaign Growth</h3>
					</div>
					<div id="customer-growth-chart" class="panel-body" style="height: 250px;">
						
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Campaign Growth</h3>
					</div>
					<div id="customer-growth-chart" class="panel-body" style="height: 250px;">
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>